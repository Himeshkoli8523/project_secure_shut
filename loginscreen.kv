<LoginScreen>:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#000000")
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        Label:
            id: login_message
            size_hint: 0.8, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            color: (1, 0, 0, 1)
            markup: True

        TextInput:
            id: login_email
            hint_text: "email"
            size_hint: 0.8, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.7 + 0.04} 
            multiline: False

        TextInput:
            id: login_password
            hint_text: "password"
            size_hint: 0.8, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.6 + 0.02} 
            multiline: False
            password: True
            

        LabelButton:
            id: forgot_password
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.45} 
            color: utils.get_color_from_hex("#85a6de")
            text: "[b]Forgot Password?[/b]"
            markup: True
            on_release:
                app.change_screen("forgot_password_screen")

        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#b6d7ff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Log In"
            color: (0, 0, 0, 1)
            size_hint: 0.8, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.35}  
            on_release:
                app.my_firebase.sign_in(login_email.text, login_password.text)

        Label:
            text: "[b]Don't have an account?[/b]"
            markup: True
            size_hint: 0.8, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.25} 

        LabelButton:
            text: "[b][u]Sign up[/u][/b]"
            markup: True
            size_hint: 0.8, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.21} 
            color: utils.get_color_from_hex("#85a6de")
            on_release:
                app.change_screen("signup_screen")
